<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row" style="margin-top:30px;">
      <div class="col col-md-9"><%= link_to '+ New Document', new_document_path, :class => 'btn btn-success' %></div>
      <div class="col col-md-3">
        <%= form_tag(documents_path, method: :get) do %>
          <%= text_field_tag :name, params[:name] %>
          <%= submit_tag 'Search', name: nil %>
        <% end %>
      </div>
    </div>
    <div class="row" style="margin-top:30px;">
      <% @documents.each do |document| %>
        <div class="col col-md-4">
            <img src="<%= document.file %>">
            <h3><%= document.name %> </h3>
            <p>Start: <%= document.start_date %> </p>
            <p>Expired: <%= document.exp_date %> </p>
            <p>Document id: <%= document.id %></p>
            <br>
            <button type="button" class="btn btn-success"><%= link_to 'Show', document %></button>
            <button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_document_path(document) %></button>
            <button type="button" class="btn btn-danger"><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </div>
      <% end %>

  </div>
</div>
